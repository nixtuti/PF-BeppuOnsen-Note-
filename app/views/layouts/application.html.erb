<!DOCTYPE html>
<html>
  <head>
    <title>BeppuOnsen Note</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/13f2c566e6.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main id="main" class="min-vh-100">
      <div class="container">
        <% if flash[:notice] %>
          <div class="alert alert-secondary text-success mb-0">
            <%= notice %><button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>
        <% end %>
        <div class="text-danger">
          <p class="alert m-0">
            <%= alert %>
          </p>
        </div>
        <%= yield %>
      </div>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
