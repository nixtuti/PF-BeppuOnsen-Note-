<div class="container">
  <div class="row">
    <h4 class="col-5 col-lg-3 mb-5 bg-dark text-light text-center text-nowrap">ユーザー一覧</h4>
    <table class="table table-border table-secondary">
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%=link_to user.username, admin_user_path(user),class: "text-dark" %></td>
          <td><%= user.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>