<div class="mx-auto col-11 col-sm-10 col-lg-8">
  <div class="mt-4">
    <h4 class="col-lg-5 col-md-6 bg-dark text-light text-center">ユーザー登録情報</h4>
  </div>
  <div class="py-4">
    <table class="table table-border table-secondary">
      <tr>
        <th class="align-middle">プロフィール画像</th>
        <td><%= image_tag @user.get_profile_image, size: "70x70" %></td>
      </tr>
      <tr>
        <th class="align-middle">ユーザーネーム</th>
        <td><%= @user.username %></td>
      </tr>
      <tr>
        <th>生年月日</th>
        <td><%= @user.birth_date %></td>
      </tr>
      <tr class="field align-middle text-nowrap">
        <th>性別</th>
        <td><%= @user.sex %></td>
      </tr>
      <tr class="border-bottom">
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
    <% if @user.username != "ゲスト" %>
      <div class="actions my-4 text-center">
        <%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-success" %>
        <%= link_to '削除する', admin_user_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
  <div class="m-2">
    <%= link_to reviews_admin_user_path(@user), class: "btn btn-primary" do %>
      投稿したクチコミ　（<%= @user.reviews.count %>）
    <% end %>
  </div>
  <div class="m-2">
    <%= link_to comments_admin_user_path(@user), class: "btn btn-primary" do %>
      投稿したコメント　（<%= @user.comments.count %>）
    <% end %>
  </div>
</div>