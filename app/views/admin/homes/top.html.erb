<div class="container"> 
    <div class="row py-4">
        <h4 class="col-lg-3 col-sm-5 mb-5 bg-dark text-light text-center text-nowrap">クチコミ一覧</h4>
        <table class="table table-bordered table-secondary mb-5">
            <thead>
                <tr>
                    <th class="col-2">ユーザー名</th>
                    <th class="col-2">温泉名</th>
                    <th>評価</th>
                    <th class="col-8">クチコミ</th>
                </tr>
            </thead>
            <tbody>
                <% @reviews.each do |review| %>
                    <tr>
                        <td><%= review.user.username %></td>
                        <td><%= review.hot_spring.name %></td>
                        <td>
                            <!--星5段階評価表示-->
                            <div id="star-rate<%= review.id %>" class="text-nowrap"></div>
                            <script>
                            raty(document.querySelector('#star-rate<%= review.id %>'),{
                                //星画像の指定などのオプションをここに
                                size      : 36,
                                starOff   : '<%= asset_path('star-off.png') %>',
                                starOn    : '<%= asset_path('star-on.png') %>',
                                starHalf: '<%= asset_path('star-half.png') %>',
                                readOnly: true,
                                score: <%= review.rate %>,
                                half: true,
                            });
                            </script>
                        </td>
                        <td>
                            <%=link_to review.title, admin_review_path(review), class: "text-dark" %><br>
                            <%= review.body %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>