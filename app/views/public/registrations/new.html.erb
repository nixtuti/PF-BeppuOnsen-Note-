<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8">
      <div class="my-4">
        <h4 class="col-lg-4 col-md-5 col-sm-6 bg-dark text-light text-center">新規会員登録</h4>
        <div class="text-danger">
          <%= render "public/shared/error_messages", resource: resource %>
        </div>
      </div>
      <div class="my-5 t4">
        <%= form_with model: @user, url: user_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
          <div class="table-responsive">
            <table class="table table-borderless text-nowrap">
              <tr class="field">
                <th class="align-middle"><%= f.label :profile_image, "プロフィール画像", class: "m-0" %></th>
                <td><%= f.file_field :profile_image, accept: "image/*" %></td>
              </tr>
              <tr class="field">
                <th class="align-middle"><%= f.label :username, "ユーザーネーム", class: "m-0" %></th>
                <td><%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control' %></td>
              </tr>
              <tr class="field">
                <th><%= f.label :birth_date, "生年月日" %></th>
                <td><%= f.date_field :birth_date, class: 'form-control'%><%#= raw sprintf( f.date_select( :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 5), default: Date.new(1989, 1, 1), date_separator: '%s' ), '年 ', '月 ') + '日' %></td>
              </tr>
              <tr class="field align-middle text-nowrap">
                <th><%= f.label :sex, "性別" %></th>
                <td>
                  <div class="w-25 d-inline-block">
                    <%= f.radio_button :sex, :male  %>
                    <%= f.label :sex, "男性"  %> 
                  </div>
                  <div class="d-inline-block">
                    <%= f.radio_button :sex, :female %>
                    <%= f.label :sex, "女性" %>
                  </div>
                </td>
              </tr>
              <tr class="field">
                <th class="align-middle"><%= f.label :email, "メールアドレス", class: "m-0" %></th>
                <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: 'form-control' %></td>
              </tr>
              <tr class="field">
                <th class="align-middle">
                  <%= f.label :password, "パスワード", class: "m-0" %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>文字以上)</em>
                  <% end %>
                </th>
                <td><%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %></td>
              </tr>
              <tr class="field">
                <th class="align-middle"><%= f.label :password_confirmation, "パスワード(確認用)", class: "m-0" %></th>
                <td><%= f.password_field :password_confirmation, class: 'form-control' %></td>
              </tr>
            </table>
          </div>
          <div class="actions m-4 text-center">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="my-4 p-2 text-center">
        <h6 class="col-lg-4 col-md-5 col-sm-6 bg-dark text-light text-center">既に登録済みの方</h6>
        <p><%= render "public/shared/links" %> からログインしてください</p>
      </div>
    </div>
  </div>
</div>