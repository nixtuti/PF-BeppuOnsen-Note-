<div class="my-4">
  <h4 class="col-5 col-lg-4 mb-5 bg-dark text-light text-center text-nowrap"><%= hot_spring.name %></h4>
  <div class="container d-flex">
    <div class="row">
      <div class="col-xl-4 col-lg-5">
        <%= image_tag hot_spring.get_hot_spring_image, size: "320x200" %>
      </div>
      <div class="col-xl-8 col-lg-7 col-md-12 my-3">
        <div class="row">
          <!--星5段階評価表示-->
          <div id="average-star-rate" class="col-9"><h5>ユーザー総合評価</h5>　　</div>
            <script>
              raty(document.querySelector('#average-star-rate'),{
                //星画像の指定などのオプションをここに
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                readOnly: true,
                score: <%= hot_spring.reviews.average(:rate).to_f.round(1) %>,
                half: true,
              });
            </script>
          <div class="col-3 m-auto"><%= hot_spring.reviews.count %> 件の評価</div>
          <div class="m-3"><%= hot_spring.introduction %></div>
        </div>
        
      </div>
    </div>
  </div>
</div>
