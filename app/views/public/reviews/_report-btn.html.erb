<% if review.report == false %>
  <%= link_to "不適切なクチコミとして報告",  hot_spring_review_report_path(hot_spring, review), method: :patch, remote: true, class: "btn btn-sm btn-danger" %>
<% else %>
  <%= link_to "このクチコミは通報済みです",  hot_spring_review_report_path(hot_spring, review), class: "btn btn-sm disabled btn-danger" %>
<% end %>