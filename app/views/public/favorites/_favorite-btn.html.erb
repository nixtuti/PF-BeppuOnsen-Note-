<% if review.favorited_by?(current_user) %>
  <%= link_to hot_spring_review_favorites_path(hot_spring, review), class: "text-decoration-none", method: :delete, remote: true do %>
    <i class="fa-solid fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to hot_spring_review_favorites_path(hot_spring, review), class: "text-decoration-none", method: :post, remote: true do %>
    <i class="fa-regular fa-heart"></i>
  <% end %>
<% end %>
